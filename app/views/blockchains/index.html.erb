<div class="page-header">
  <h2>
    All Quotes
    <a href="/blockchains/new" class="btn btn-success pull-right">New Quote</a>
  </h2>
</div>

<div class="row">
  <div class="col-md-12">
          <%= paginate @blockchains %>
    <table class="table table-striped table-hover">
      <tr>
        <th>When</th>
        <th>Salesperson</th>
        <th>Product</th>
        <th>State</th>
        <th>City</th>
        <th>Customer</th>
        <!--<th>Company</th>-->
        <th>Source</th>
        <th>Price</th>
        <!--<th>Metric</th>-->
        <th>Tons</th>
        <th>Mode</th>
        <!--<th>Terms</th>-->
        <th>Ship start</th>
        <!--<th>Completed</th>-->
        <th>Actions</th>
      </tr>

      <% @blockchains.order("created_at DESC").each do |blockchain| %>
      <tr>
        <td> <%= time_ago_in_words(blockchain.created_at) %> ago</td>   
        <td><a href="/salespeople/<%=blockchain.salesperson_id%>"><%= Salesperson.find(blockchain.salesperson_id).salesperson.split(" ")[0] %></a></td>
        <td><%= Product.find(blockchain.product_id).name %></td>
        <td><a href="/states/<%= blockchain.state %>"><%= blockchain.state %></a></td>
        <td><%= blockchain.city %></td>
        <td><a href="/customers/<%=blockchain.customer_id%>"><%= Customer.find(blockchain.customer_id).short_name %></a></td>
        <!--<td><a href="/companies/<%=blockchain.company_id%>"><%= Company.find(blockchain.company_id).name %></a></td>-->
        <td><a href="/locations/<%=blockchain.source_id%>"><%= Location.find(blockchain.source_id).city%></a></td>
        <td><%= blockchain.price %></td>
        <!--<td><%= blockchain.metric %></td> -->
        <td><%= blockchain.tons %></td>
        <td><a href="/modes/<%= blockchain.mode %>"><%= Mode.find(blockchain.mode).mode %></a></td>
        <!--<td><%= blockchain.terms %></td>-->
        <td><%= blockchain.ship_start %></td>
        <!--<td><%= blockchain.completed %></td>-->
        <td>
          <% if Salesperson.find(blockchain.salesperson_id).salesperson.split(" ")[0] == @userfirstname %>
            <a href="/blockchains/<%= blockchain.id %>" class="btn-xs btn-primary">Show</a>
            <a href="/blockchains/<%= blockchain.id %>/edit" class="btn-xs btn-warning">Edit</a>
            <!--<a href="/delete_blockchain/<%= blockchain.id %>" class="btn-xs btn-danger" rel="nofollow">Delete</a>-->
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<%= paginate @blockchains %>