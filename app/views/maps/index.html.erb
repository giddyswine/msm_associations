<div class="page-header">
  <h1>
    Maps
    <a href="/maps/new" class="btn btn-lg btn-success">New Map</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Address</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Visited by</th>
        <th>Actions</th>
      </tr>

      <% @maps.each do |map| %>
      <tr>
        <td><%= map.title %></td>
        <td><%= map.address %></td>
        <td><%= map.latitude %></td>
        <td><%= map.longitude %></td>
        <td><%= map.visited_by %></td>
        <td>
          <a href="/maps/<%= map.id %>" class="btn btn-primary">Show</a>
          <a href="/maps/<%= map.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_map/<%= map.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
