<div class="page-header">
  <h1>
    Locationdetails
    <a href="/locationdetails/new" class="btn btn-lg btn-success">New Locationdetail</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Company</th>
        <th>Location</th>
        <th>Product</th>
        <th>Capacity</th>
        <th>Actions</th>
      </tr>

      <% @locationdetails.each do |locationdetail| %>
      <tr>
        <td><%= locationdetail.company_id %></td>
        <td><%= locationdetail.location_id %></td>
        <td><%= locationdetail.product_id %></td>
        <td><%= locationdetail.capacity %></td>
        <td>
          <a href="/locationdetails/<%= locationdetail.id %>" class="btn btn-primary">Show</a>
          <a href="/locationdetails/<%= locationdetail.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_locationdetail/<%= locationdetail.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
