<div class="page-header">
  <h1>
    Modes
    <a href="/modes/new" class="btn btn-lg btn-success">New Mode</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Mode</th>
        <th>Actions</th>
      </tr>

      <% @modes.each do |mode| %>
      <tr>
        <td><%= mode.mode %></td>
        <td>
          <a href="/modes/<%= mode.id %>" class="btn btn-primary">Show</a>
          <a href="/modes/<%= mode.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_mode/<%= mode.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
