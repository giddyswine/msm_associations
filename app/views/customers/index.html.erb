<div class="page-header">
  <h1>
    Customers
    <a href="/customers/new" class="btn btn-lg btn-success">New Customer</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Promise</th>
        <th>Name</th>
        <th>Short name</th>
        <th>Actions</th>
      </tr>

      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.promise_id %></td>
        <td><%= customer.name %></td>
        <td><%= customer.short_name %></td>
        <td>
          <a href="/customers/<%= customer.id %>" class="btn btn-primary">Show</a>
          <a href="/customers/<%= customer.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_customer/<%= customer.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
