      <a href="/salespeople/<%= @salesperson.id %>/edit" class="btn-xs btn-warning pull-right">
        Edit
      </a>
      <!--<a href="/delete_salesperson/<%= @salesperson.id %>" class="btn-xs btn-danger pull-right" rel="nofollow">-->
      <!--  Delete-->
      <!--</a> -->
  </h3>
</div>

<ul class="nav nav-tabs nav-justified">
  <li role="presentation"><a href="/salespeople/<%= @salesperson.id %>"><%=@salesperson.salesperson%>'s Customers</a></li>
  <li role="presentation" class="active"><a href="/salespeople/<%= @salesperson.id %>/recent">Recent Business</a></li>
  <li role="presentation"><a href="#">Notes & Contact</a></li> 
</ul>  

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Product</th>
        <th>State</th>
        <th>City</th>
        <th>Customer</th>
        <th>Ship-to</th>
        <th>Source</th>
        <th>Price</th>
        <th>Metric</th>
        <th>Tons</th>
        <th>Mode</th>
        <th>Terms</th>
        <th>Ship start</th>
        <th>Completed</th>
        <!--<th>Actions</th>-->
      </tr>
 
      <% Blockchain.where(salesperson_id: @salesperson.id).order("created_at DESC").limit(25).each do |blockchain| %>
      <tr>
        <td><%= Product.find(blockchain.product_id).name %></td>
        <td><a href="/states/<%= blockchain.state %>"><%= blockchain.state %></a></td> 
        <td><%= blockchain.city.capitalize %></td>
        <td><a href="/customers/<%=blockchain.customer_id%>"><%= Customer.find(blockchain.customer_id).short_name %></a></td>
        <td><a href="/shiptolocations/<%=Shiptolocation.where(shiptonumber: blockchain.shiptonumber).first.id%>"><%= Shiptolocation.where(shiptonumber: blockchain.shiptonumber).first.shiptoname %></a></td>
        <td><a href="/locations/<%=blockchain.source_id%>"><%= Location.find(blockchain.source_id).city%></a></td>
        <td><%= blockchain.price %></td>
        <td><%= blockchain.metric %></td>
        <td><%= blockchain.tons %></td>
        <td><a href="/modes/<%= blockchain.mode %>"><%= Mode.find(blockchain.mode).mode %></a></td>
        <td><%= blockchain.terms %></td>
        <td><%= blockchain.ship_start %></td>
        <td><%= blockchain.completed %></td>
        <!--<td>-->
        <!--  <a href="/blockchains/<%= blockchain.id %>" class="btn-xs btn-primary">Show</a>-->
        <!--  <a href="/blockchains/<%= blockchain.id %>/edit" class="btn-xs btn-warning">Edit</a>-->
        <!--  <a href="/delete_blockchain/<%= blockchain.id %>" class="btn-xs btn-danger" rel="nofollow">Delete</a>-->
        <!--</td>-->
      </tr>
      <% end %>
    </table>
  </div>
</div>
