<!-- Validation failure messages -->
<% if @mode.errors.any? %>
  <% @mode.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Mode</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_mode" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for mode -->
      <div class="form-group">
        <label for="mode" class="control-label">
          Mode
        </label>

        <input type="text" id="mode" name="mode" placeholder="Mode" class="form-control" value="<%= @mode.mode %>">
      </div>

      <button class="btn btn-success">
        Create Mode
      </button>
      or
      <a href="/modes">Cancel</a>
    </form>
  </div>
</div>
