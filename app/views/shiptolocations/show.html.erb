<div class="page-header">
  <h3>Shiptolocation <%= @shiptolocation.shiptoname %> (<%= @shiptolocation.shiptonumber %>)
    <div class="btn-group pull-right">
      <a href="/shiptolocations" class="btn-sm btn-primary">Back</a>
      <a href="/shiptolocations/<%= @shiptolocation.id %>/edit" class="btn-sm btn-warning">Edit</a>
      <a href="/delete_shiptolocation/<%= @shiptolocation.id %>" class="btn-sm btn-danger">Delete</a>
    </div>
  </h3>
   
  <% if @shiptolocation.parent == 0 %>
    <h4><a href="/shiptolocations/<%= @shiptolocation.id %>/edit">Add an Owner</a></h4>
  <% else %>
    <h4>Owned by <a href="/customers/<%= Customer.where(promise_id: @shiptolocation.parent).first.id %>"><%= Customer.where(promise_id: @shiptolocation.parent).first.name %></a> (<%= @shiptolocation.parent %>)</h4>
  <% end %>
  
      <h4>
        <% if @shiptolocation.truck == "yes" %>
          Truck
        <% end %>    
    
        <% if @shiptolocation.unittrain == "yes" %>
          , Unit Trains (<%@shiptolocation.railline%>)
        <% else if @shiptolocation.rail == "yes" %>
          , Single Cars (<%=@shiptolocation.railline%>)
        <% end %>     
        <% end %>     
    
        <% if @shiptolocation.barge == "yes" %>
          , Barge 
        <% end %>    
      </h4>
</div>

<h3>Location: <%= @shiptolocation.city.capitalize %>, <%= @shiptolocation.county.capitalize %> County, <%= State.find(@shiptolocation.state).state %> </h3> 
  <head>
    <style>
       #map {
        height: 400px;
        width: 75%;
       }
    </style>
  </head>
  <body>
    <div id="map"></div>
    <script>
      function initMap() {
        var uluru = {lat: <%=@shiptolocation.latitude %>, lng: <%=@shiptolocation.longitude %>}; 
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 15,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBk2odFvKELGiTLthIZv1AcrRAtyJtoUCQ&callback=initMap">
    </script>
  </body>
  <br>

