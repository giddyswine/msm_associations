<!-- Validation failure messages -->
<% if @customer.errors.any? %>
  <% @customer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Customer #<%= @customer.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_customer/<%= @customer.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for promise_id -->
      <div class="form-group">
        <label for="promise_id" class="control-label">
          Promise
        </label>

        <input type="text" id="promise_id" name="promise_id" placeholder="Promise" class="form-control" value="<%= @customer.promise_id %>">
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @customer.name %>">
      </div>

      <!-- Label and input for short_name -->
      <div class="form-group">
        <label for="short_name" class="control-label">
          Short name
        </label>

        <input type="text" id="short_name" name="short_name" placeholder="Short name" class="form-control" value="<%= @customer.short_name %>">
      </div>

      <button class="btn btn-warning">
        Update Customer
      </button>
      or
      <a href="/customers/<%= @customer.id %>">Cancel</a>
    </form>
  </div>
</div>
