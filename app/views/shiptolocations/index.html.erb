<div class="page-header">
  <h2>
    Ship-to Locations
    <a href="/shiptolocations/new" class="btn pull-right btn-success">New Ship-to Location</a>
  </h2>

  <form class="navbar-form navbar-left" role="search">
    <%= search_form_for @q do |f| %>
      <div class="form-group">
        <%= f.text_field :shiptoname_cont, :class => "form-control", :placeholder => "Search by Name" %>
      </div>
      
      <div class="form-group">
        <%= f.text_field :city_cont, :class => "form-control", :placeholder => "Search by City" %>
      </div>
      
      <!--<div class="form-group">-->
      <!--  <%= f.text_field :parent_cont, :class => "form-control", :placeholder => "Search by Customer Number" %>-->
      <!--</div>-->
  
      <%= f.submit :class => "btn btn-primary btn-default" %>
      
      <a href="/shiptolocations" class="btn btn-default btn-warning">Clear filters</a>
    <% end %>
  </form>
</div>

<div class="row">
  <div class="col-md-12">

          <%= paginate @shiptolocations %>

    <table class="table table-striped table-hover">
      <tr>
        <th>Open</th>
        <th>State</th>
        <th>County</th>
        <th>City</th>
        <th>Promise #</th>
        <th>Name</th>
        <th>Parent</th> 
        <!--<th>Edit</th>-->
        <!--<th>Delete</th>-->
      </tr>

      <% @shiptolocations.each do |shiptolocation| %>

      <tr>
        <td><a href="/shiptolocations/<%= shiptolocation.id %>" class="btn-sm btn-primary">Open</a></td>
        <td><a href="/states/<%= shiptolocation.state %>"><%= shiptolocation.state %></a></td>
        <td><span class="text-nowrap"><%= shiptolocation.county.capitalize %></span></td>
        <td><span class="text-nowrap"><%= shiptolocation.city.capitalize %></span></td>
        <td><%= shiptolocation.shiptonumber %></td>
        <td><span class="text-nowrap"><%= shiptolocation.shiptoname %></span></td>

        <% if Customer.where(promise_id: shiptolocation.parent).first.present? %>
          <td><span class="text-nowrap"><a href="customers/<%= Customer.where(promise_id: shiptolocation.parent).first.id %>"><%= Customer.where(promise_id: shiptolocation.parent).first.name %></a></span></td>
        <% else %>
          <td>unlinked</td>
        <% end %>
        <!--<td><a href="/shiptolocations/<%= shiptolocation.id %>/edit" class="btn-sm btn-warning">Edit</a></td>-->
        <!--<td><a href="/delete_shiptolocation/<%= shiptolocation.id %>" class="btn-sm btn-danger" rel="nofollow">Delete</a></td>-->
      </tr>
      <% end %>
    </table>
  </div>
</div>
<%= paginate @shiptolocations %>