<div class="page-header">
  <h1>
    Customers
    <a href="/customers/new" class="btn btn-lg btn-success">New Customer</a>
  </h1>
</div>

<%= search_form_for @q do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :name_cont, "Title containing" %>
    <%= f.text_field :name_cont, :class => "form-control", :placeholder => "Enter a few characters" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block" %>
  
  <a href="/movies" class="btn btn-default btn-block">Clear filters</a>
<% end %>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Promise</th>
        <th>Name</th>
        <th>Short name</th>
        <th>Actions</th>
      </tr>

      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.promise_id %></td>
        <td><%= customer.name %></td>
        <td><%= customer.short_name %></td>
        <td>
          <a href="/customers/<%= customer.id %>" class="btn-sm btn-primary">Show</a>
          <a href="/customers/<%= customer.id %>/edit" class="btn-sm btn-warning">Edit</a>
          <a href="/delete_customer/<%= customer.id %>" class="btn-sm btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
